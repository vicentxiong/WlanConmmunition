<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/incoming"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/filereceiver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:text="@string/file_receiver"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/popupwindow__textsize"
        android:gravity="center" />

    <TextView
        android:id="@+id/filereject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:text="@string/file_reject"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/popupwindow__textsize" 
        android:layout_marginLeft="@dimen/popupwindow__textgap"
        android:gravity="center"/>

</LinearLayout>